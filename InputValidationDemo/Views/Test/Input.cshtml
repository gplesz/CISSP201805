@model InputValidationDemo.Models.InputModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.EgySzam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EgySzam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EgySzam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EgySzoveg, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EgySzoveg, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EgySzoveg, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>        
    </div>

}